<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="105dp"
        android:layout_height="124dp"
        android:src="@drawable/icon_app"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.187" />


    <Button
        android:id="@+id/todolistButton"
        android:layout_width="117dp"
        android:layout_height="53dp"
        android:layout_marginTop="28dp"
        android:text="ToDo List"
        app:layout_constraintStart_toStartOf="@+id/quizButton"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />


    <Button
        android:id="@+id/quizButton"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="8dp"
        android:text="Quiz"
        app:layout_constraintBottom_toBottomOf="@+id/graphButton"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/todolistButton"
        app:layout_constraintVertical_bias="0.849" />


    <Button
        android:id="@+id/calendarButton"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="152dp"
        android:text="Calendar"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.054"
        app:layout_constraintStart_toStartOf="@+id/graphButton"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <Button
        android:id="@+id/graphButton"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="144dp"
        android:layout_marginTop="24dp"
        android:text="Graph"
        app:layout_constraintStart_toEndOf="@+id/quizButton"
        app:layout_constraintTop_toBottomOf="@+id/calendarButton" />

    <Button
        android:id="@+id/chatButton"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="88dp"
        android:text="Chat"
        app:layout_constraintStart_toEndOf="@+id/quizButton"
        app:layout_constraintTop_toBottomOf="@+id/calendarButton" />


    <Button
        android:id="@+id/outilButton"
        android:layout_width="150dp"
        android:layout_height="74dp"
        android:layout_marginTop="164dp"
        android:text="Outil prepa mentale"
        app:layout_constraintStart_toEndOf="@+id/quizButton"
        app:layout_constraintTop_toBottomOf="@+id/calendarButton" />




</android.support.constraint.ConstraintLayout>